package br.com.geekuniversitysecao07;

import java.util.Scanner;

public class Exercicio04 {

	public static void main(String[] args) {
		int valor, maior = -999, menor = 999, soma = 0;
		float media;
		Scanner teclado = new Scanner(System.in);
		
		for(int i = 0; i <= 10; i++) {
			System.out.println("Informe um valor de 0 a 10:  ");
			valor = teclado.nextInt();
			
			if(valor > maior) {
				maior = valor;
			}else if(valor < menor) {
				menor = valor;
			}
			soma = soma + valor;
		}
		media = soma / 10;
		System.out.printf("O maior valor é: %d\n", maior);
		System.out.printf("O menor valor é: %d\n", menor);
		System.out.printf("A média entre eles é: %d\n", media);
		
		teclado.close();
	}
}
