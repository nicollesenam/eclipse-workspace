package br.com.geekuniversitysecao07;

import java.util.Scanner;

public class Exercicio06 {

	public static void main(String[] args) {
		int numero, valor;
		Scanner teclado = new Scanner(System.in);
		
	    System.out.println("Informe um número que deseja ver a tabuada:  ");
	    numero = teclado.nextInt();
		
	    if(numero > 10) {
	    	System.out.println("Número deve ser menor que 10");
	    	System.out.println("Informe um número que deseja ver a tabuada:  ");
		    numero = teclado.nextInt();	
		    System.out.println("Tabuada de " + numero);
		}
	    for(int i = 0; i <= 10; i++) {
	    	valor = numero * 1;
	    	System.out.printf("%d x %d = %d\n", numero, i, valor);
	    }
        teclado.close();
	}

}
