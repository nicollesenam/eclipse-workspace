package br.com.geekuniversitysecao08;

import java.util.Scanner;

public class Exercicio05 {

	public static void main(String[] args) {
		int[] vetor = new int[10];
		int maior_50 = 0;
		Scanner teclado = new Scanner(System.in);
		
		for(int i = 0; i < 10; i++) {
			System.out.println("Informe um valor para o vetor:  ");
			vetor[i] = teclado.nextInt();
		}
		for(int i = 0; i < 10; i++) {
			if(vetor[i] > 50) {
				maior_50 = 1;
				System.out.printf("Valor %d maior que 50 na posição %d\n", vetor[i], i);
		    }else if(maior_50 < 1){
				maior_50 = 0;
				System.out.println("Não existe número maior que 50");
			}
		}
       teclado.close();

	}

}
