package br.com.geekuniversitysecao08;

import java.util.Scanner;

public class teste {

	public static void main(String[] args) {
		boolean maior_50 = false;
		int[] vetor = new int[10];
		Scanner teclado = new Scanner(System.in);
		
		for(int i = 0; i < 10; i++) {
			System.out.println("Informe um valor para o vetor (%d/10):  " + (i + 1));
			vetor[i] = teclado.nextInt();
		}
		for(int i = 0; i < 10; i++) {
			if(vetor[i] > 50) {
				maior_50 = true;
				System.out.printf("Número %d maior que 50 na posição %d\n", vetor[i], i);
			}
		}
		if(!maior_50) {
			System.out.println("Não existem números maiores que 50");
		}
		teclado.close();
	}

}
