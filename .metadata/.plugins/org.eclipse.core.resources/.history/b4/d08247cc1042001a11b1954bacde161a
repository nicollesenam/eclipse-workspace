#include <stdio.h>

int main(){
	int valor, menor = 9999, maior = - 9999, soma = 0;
	float media;

	for(int i = 0; i < 10; i++){
		printf("Informe um valor:  ");
		fflush(stdout);
		scanf("%d", &valor);
		if(valor > 0){
			if(valor > maior){
			maior = valor;
		    }
		    if(valor < menor){
			menor = valor;
		    }
		    soma = soma + valor;
	    }else{
	    	i--;
	    	//se digitar um numero negativo
	    }
	}
	media = soma / 10;
    printf("O maior valor é %d\n", maior);
	printf("O menor valor é %d\n", menor);
	printf("A média dos valores é %.2f\n", media);

}
