#include <stdio.h>

int main(){
	int c;
	float n, salario, e, valor_hora = 10.00;

	printf("Informe o código:  ");
	fflush(stdout);
	scanf("%d", &c);
	printf("Quantas horas você trabalhou?:  ");
	fflush(stdout);
	scanf("%f", &n);

	if(n > 50){
		e = (n - 50) * 20.00;
		salario = (50 * valor_hora) + e;
		printf("O salário excedente é %.2f", e);
		printf("O salário total é %.2f", salario);

	}else{
		e = 0;
        printf("Não houve excessos, pois você trabalhou o período normal.");



	}
}
