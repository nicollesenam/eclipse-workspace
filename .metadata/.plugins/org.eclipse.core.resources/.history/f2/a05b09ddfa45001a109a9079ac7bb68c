package br.com.geekuniversity.secao06;

import java.util.Scanner;

public class Exercicio09 {

	public static void main(String[] args) {
    float indice_poluicao;
    Scanner teclado = new Scanner(System.in);
    
    System.out.println("Informe o índice de poluição:  ");
    indice_poluicao = teclado.nextFloat();
    
    if(indice_poluicao >= 0.3 && indice_poluicao < 0.4) {
    	System.out.println("Grupo 1 suspender as atividades");
    }else if(indice_poluicao >= 0.4 && indice_poluicao < 0.5) {
        	 System.out.println("Grupos 1 e 2 suspender atividades");
    }else if(indice_poluicao >= 0.5) {
        	 System.out.println("Todos os grupos devem suspender as atividades");
    }else {
		System.out.println("Níveis aceitáveis");
	}
    teclado.close();
    }
   	
}