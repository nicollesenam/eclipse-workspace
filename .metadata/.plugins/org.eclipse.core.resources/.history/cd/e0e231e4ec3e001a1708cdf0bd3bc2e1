#include <stdio.h>

int main(){
	char sexo;
	float altura, peso_ideal;

	printf("Informe seu sexo, m/f:  ");
	fflush(stdout);
	scanf("%c", &sexo);

	printf("Informe sua altura:  ");
	fflush(stdout);
	scanf("%f", &altura);

	if(tolower(sexo) == 'm'){
		peso_ideal = (72.7 * altura) - 58;
		printf("O seu peso ideal seria %.2f", peso_ideal);

	}else{
		if(tolower(sexo) == 'f'){
		peso_ideal = (62.1 * altura) - 44.7;
		printf("O seu peso ideal seria %.2f", peso_ideal);

	}else{
    	printf("Dados indisponíveis. Por favor, escolha sexo m ou f.");
    }




	}
}
