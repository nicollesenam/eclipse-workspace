package br.com.geekuniversity.secao06;

import java.util.Scanner;

public class Exercicio04 {

	public static void main(String[] args) {
		//variaveis
		float altura, peso_ideal;
		char sexo;
		Scanner teclado = new Scanner(System.in);
		//entradas
		System.out.println("Informe sua altura:  ");
		altura = teclado.nextFloat();
		
		System.out.println("Informe seu sexo(m/f):  ");
		sexo = teclado.next().charAt(0);
		//charat0 fuciona para transformar em string
		//começando na posicao 0, primeira letra se a pessoa digita feminino, so conta o F
		//nao existe nextchar, entao coloca pra receber
		//apenas 1 string, como "sexo"
		
		//processamento
		if(sexo == 'm' || sexo == 'M') {
			peso_ideal = (float)(72.7 * altura) - 58;
			System.out.println("Seu peso ideal é:  " + peso_ideal);
			//pedir resultado em float pq ele acha que é double
		}
		if(sexo == 'f' || sexo == 'F') {
			peso_ideal = (float)(62.1 * altura) - 44.7;
		}
		
		teclado.close();
		//aspas simples pq é um caractere, aspas duplas é string
		
		
		


	}

}
